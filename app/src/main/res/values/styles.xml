<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/MyDrawerStyle</item>>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDrawerStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#FFFFFF</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Button.ReservarTurno" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/fondoReservarTurnoBtn</item>
        <item name="android:textColor">@color/colorAceptar</item>
    </style>

    <style name="Text.SubtituloTurnos" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#99000000</item>
    </style>

    <style name="Text.HoraTurnos" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="Button.TurnoOcupado.Quitar" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/fondoQuitarTurnoBtn</item>
        <item name="android:textColor">@color/colorCancelar</item>
    </style>

    <style name="Button.TurnoOcupado.Modificar" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/fondoModificarTurnoBtn</item>
        <item name="android:textColor">@color/colorNeutral</item>
    </style>
</resources>
